  "good_practice_statements": [
    {
      "pollutant": "Black Carbon / Elemental Carbon (BC/EC)",
      "actions": [
        "Make systematic measurements of black carbon and/or elemental carbon.",
        "Measurements should not replace or reduce existing monitoring of pollutants for which guidelines currently exist.",
        "Undertake the production of emission inventories, exposure assessments, and source apportionment for BC/EC.",
        "Take measures to reduce BC/EC emissions from within the relevant jurisdiction.",
        "Where appropriate, develop standards (or targets) for ambient BC/EC concentrations."
      ]
    },
    {
      "pollutant": "Ultrafine Particles (UFP)",
      "description": "Quantify ambient UFP in terms of Particle Number Concentration (PNC) for a size range with a lower limit of <= 10 nm.",
      "monitoring_strategy": "Expand common air quality monitoring by integrating UFP monitoring, including size-segregated real-time PNC measurements.",
      "threshold_distinctions": {
        "Low PNC": "< 1,000 particles/cm³ (24-hour mean).",
        "High PNC": "> 10,000 particles/cm³ (24-hour mean) OR 20,000 particles/cm³ (1-hour mean)."
      },
      "actions": [
        "Distinguish between low and high PNC to guide decisions on priorities for source emission control.",
        "Utilize emerging science/technology to advance approaches to exposure assessment."
      ]
    },
    {
      "pollutant": "Sand and Dust Storms (SDS)",
      "actions": [
        "Maintain suitable air quality management and dust forecasting programmes, including early warning systems.",
        "Activate short-term air pollution action plans to alert the population to stay indoors during SDS incidents.",
        "Take personal measures to minimize exposure during SDS incidents with high levels of PM.",
        "Maintain source apportionment activities to quantify the percentage contribution of SDS to overall PM.",
        "Target local PM emissions from anthropogenic and natural sources for reduction.",
        "Implement wind erosion control through the carefully planned expansion of green spaces.",
        "Clean streets in urban areas with high population density and low rainfall to prevent resuspension by road traffic after intense SDS episodes."
      ]
    }
